<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp">

    <com.android.volley.toolbox.NetworkImageView android:layout_width="90dp"
               android:layout_height="90dp" android:background="@android:color/transparent"
               android:id="@+id/imgPizza" android:scaleType="fitXY"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingLeft="16dp">

        <TextView
                android:text="Pizza name placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblPizzaName"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
                android:text="Ingredients placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:id="@+id/lblAllIngredients"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    </LinearLayout>

</LinearLayout>