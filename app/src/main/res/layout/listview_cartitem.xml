<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp">

    <com.android.volley.toolbox.NetworkImageView android:layout_width="90dp"
                                                 android:layout_height="90dp" android:background="@android:color/transparent"
                                                 android:id="@+id/imgPizza" android:scaleType="fitXY"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingLeft="16dp">

        <TextView
                android:text="Pizza name placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblPizzaName"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
                android:text="Ingredients placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblAllIngredients"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:layout_marginTop="10dp"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginTop="10dp">
            <Button
                    android:text="È˜terge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnDelete" android:layout_weight="0"
            />
            <TextView
                    android:text="13.37 RON"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/lblPrice" android:layout_weight="1"
                    android:textSize="18sp" android:textStyle="bold" android:gravity="right|center_vertical"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>